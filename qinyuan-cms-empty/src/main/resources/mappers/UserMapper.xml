<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qinyuan.cms.dao.UserMapper">
  <resultMap id="BaseResultMap" type="com.qinyuan.cms.domain.User">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="username" jdbcType="VARCHAR" property="username" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="nickname" jdbcType="VARCHAR" property="nickname" />
    <result column="birthday" jdbcType="DATE" property="birthday" />
    <result column="gender" jdbcType="INTEGER" property="gender" javaType="com.qinyuan.cms.metas.Gender" typeHandler="org.apache.ibatis.type.EnumOrdinalTypeHandler"/>
    <result column="locked" jdbcType="BIT" property="locked" />
    <result column="created" jdbcType="TIMESTAMP" property="created" />
    <result column="updated" jdbcType="TIMESTAMP" property="updated" />
    <result column="xingzuo" jdbcType="VARCHAR" property="xingzuo" />
    <result column="address" jdbcType="VARCHAR" property="address" />
    <result column="zuoyouming" jdbcType="VARCHAR" property="zuoyouming" />
  </resultMap>
  
  <sql id="Base_Column_List">
    id, username, password, nickname, birthday, gender, locked, created, updated, xingzuo, address, zuoyouming
  </sql>
  
  <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from cms_user
    where id = #{id,jdbcType=INTEGER}
  </select>
  
  <select id="selectByUsername" parameterType="java.lang.String" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from cms_user
    where username = #{username,jdbcType=VARCHAR}
  </select>
  
  <select id="count" resultType="int">
    select count(id) from cms_user where username = #{username,jdbcType=VARCHAR}
  </select>
 
  <delete id="deleteById" parameterType="java.lang.Integer">
    delete from cms_user where id = #{id,jdbcType=INTEGER}
  </delete>
 
  <insert id="insert" parameterType="com.qinyuan.cms.domain.User">
    insert into cms_user
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="username != null">
        username,
      </if>
      <if test="password != null">
        password,
      </if>
      <if test="nickname != null">
        nickname,
      </if>
      <if test="birthday != null">
        birthday,
      </if>
      <if test="gender != null">
        gender,
      </if>
      <if test="locked != null">
        locked,
      </if>
      <if test="created != null">
        created,
      </if>
      <if test="updated != null">
        updated,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="username != null">
        #{username,jdbcType=VARCHAR},
      </if>
      <if test="password != null">
        #{password,jdbcType=VARCHAR},
      </if>
      <if test="nickname != null">
        #{nickname,jdbcType=VARCHAR},
      </if>
      <if test="birthday != null">
        #{birthday,jdbcType=DATE},
      </if>
      <if test="gender != null">
        #{gender.ordinal,jdbcType=INTEGER},
      </if>
      <if test="locked != null">
        #{locked,jdbcType=BIT},
      </if>
      <if test="created != null">
        #{created,jdbcType=TIMESTAMP},
      </if>
      <if test="updated != null">
        #{updated,jdbcType=TIMESTAMP},
      </if>
    </trim>
  </insert>
  <update id="updateById" parameterType="com.qinyuan.cms.domain.User">
  	update cms_user
  	<set>
  		<if test="nickname != null">
      	  nickname=#{nickname,jdbcType=VARCHAR},
    	</if>
    	<if test="xingzuo != null">
      	  xingzuo=#{xingzuo,jdbcType=VARCHAR},
    	</if>
    	<if test="zuoyouming != null">
      	  zuoyouming=#{zuoyouming,jdbcType=VARCHAR},
    	</if>
    	<if test="address != null">
      	  address=#{address,jdbcType=VARCHAR}
    	</if>
  	</set>
  	<where>
  		id=#{id,jdbcType=INTEGER}
  	</where>
  </update>
  
    <select id="commentsList"  resultType="com.qinyuan.cms.domain.Comment">
  		select * from cms_comment where user_id=#{id}
    </select>
</mapper>